    "applicationinsights": "^2.9.5",
    "fp-ts": "^2.16.9",
    "io-ts": "^2.2.22",
    "io-ts-types": "^0.5.16",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@pagopa/openapi-codegen-ts": "^13.2.0",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/node": "~20.12.0",
    "@vitest/coverage-v8": "~3.2.4",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-monorepo": "workspace:^",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "typescript": "^5.4.3",
    "vitest": "~3.2.4"
  }
