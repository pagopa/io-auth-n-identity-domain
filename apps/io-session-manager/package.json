{
  "name": "io-session-manager",
  "version": "1.21.0",
  "author": "IO Auth & Identity Team",
  "description": "API for IO session",
  "engines": {
    "node": ">= 20.0.0"
  },
  "main": "dist/server.js",
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc && yarn postbuild",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "start": "node dist/server.js",
    "start:watch": "yarn start watch",
    "start:debug": "node --inspect=0.0.0.0:5859 dist/server.js",
    "lint": "yarn lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "generate": "yarn generate:proxy:api-models && yarn generate:proxy:fast-login && yarn generate:proxy:io-profile && yarn generate:proxy:lollipop && yarn generate:test-certs && yarn generate:lollipop-definitions && yarn generate:proxy:fims-models && yarn generate:proxy:zendesk-models && yarn generate:proxy:bpd-models && yarn generate:proxy:pagopa-models && yarn generate:proxy:public-models",
    "generate:test-certs": "./scripts/generate-test-certs.sh certs",
    "generate:proxy:api-models": "shx rm -rf src/generated/backend && gen-api-models --api-spec api/external.yaml --out-dir src/generated/backend",
    "generate:proxy:fast-login": "shx rm -rf src/generated/fast-login-api && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-auth-n-identity-domain/477ca0f612c4ecbeddc1b35bbdde88c4fb702d5c/apps/io-fast-login/api/internal.yaml --out-dir src/generated/fast-login-api --no-strict --request-types --response-decoders --client",
    "generate:proxy:io-profile": "shx rm -rf src/generated/io-profile && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-auth-n-identity-domain/6da6a1d6628778db9325c48e9bfdd9968a3369ee/apps/io-profile/api/index.yaml --out-dir src/generated/io-profile --no-strict --request-types --response-decoders --client",
    "generate:proxy:lollipop": "shx rm -rf src/generated/lollipop-api && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-auth-n-identity-domain/0d997d9d068b3e09653f394ca07f50cae4c988bd/apps/io-lollipop/api/internal.yaml --out-dir src/generated/lollipop-api --no-strict --request-types --response-decoders --client",
    "generate:lollipop-definitions": "shx rm -rf src/generated/lollipop && gen-api-models --api-spec api/lollipop_definitions.yaml --out-dir src/generated/lollipop",
    "generate:proxy:fims-models": "shx rm -rf src/generated/fims && gen-api-models --api-spec api/sso/fims.yaml --out-dir src/generated/fims",
    "generate:proxy:zendesk-models": "shx rm -rf src/generated/zendesk && gen-api-models --api-spec api/sso/zendesk.yaml --out-dir src/generated/zendesk",
    "generate:proxy:bpd-models": "shx rm -rf src/generated/bpd && gen-api-models --api-spec api/sso/bpd.yaml --out-dir src/generated/bpd",
    "generate:proxy:pagopa-models": "shx rm -rf src/generated/pagopa && gen-api-models --api-spec api/sso/pagopa.yaml --out-dir src/generated/pagopa",
    "generate:proxy:public-models": "shx rm -rf src/generated/public  && gen-api-models --api-spec api/external.yaml --out-dir src/generated/public"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.2",
    "@azure/identity": "^4.10.1",
    "@azure/service-bus": "^7.9.5",
    "@azure/storage-queue": "^12.16.0",
    "@pagopa/io-auth-n-identity-commons": "*",
    "@pagopa/io-functions-commons": "^29.3.0",
    "@pagopa/io-spid-commons": "^14.0.1",
    "@pagopa/ts-commons": "^13.1.2",
    "@redis/client": "1.6.1",
    "applicationinsights": "^2.9.5",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "date-fns": "^1.30.1",
    "express": "^4.19.2",
    "fp-ts": "^2.16.9",
    "helmet": "^7.1.0",
    "http-graceful-shutdown": "^3.1.13",
    "io-ts": "^2.2.22",
    "io-ts-types": "^0.5.16",
    "jose": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "logform": "^2.6.0",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "node-fetch": "^2.6.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-http-custom-bearer": "^1.0.15",
    "passport-local": "^1.0.0",
    "passport-strategy": "^1.0.0",
    "range_check": "^2.0.4",
    "redis": "4.7.1",
    "ulid": "^2.3.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^4.0.6",
    "@pagopa/openapi-codegen-ts": "^14.0.1",
    "@pagopa/typescript-config-node": "*",
    "@types/body-parser": "^1",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9",
    "@types/node": "~20.19.5",
    "@types/node-fetch": "^2.1.2",
    "@types/passport": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.34",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "~3.2.4",
    "dependency-check": "^4.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-monorepo": "*",
    "eslint-plugin-prettier": "^5.1.3",
    "mock-http-server": "^1.4.5",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "supertest": "^7.0.0",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.4.3",
    "vitest": "~3.2.4"
  },
  "resolutions": {
    "xml-crypto": "2.1.6"
  }
}
