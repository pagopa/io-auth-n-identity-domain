{
  "name": "io-lollipop",
  "description": "",
  "author": "IO Auth & Identity Team",
  "version": "1.17.0",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "start:watch": "pnpm start watch",
    "lint": "pnpm lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint-api": "find ./api -name '*.yaml' -exec swagger-cli validate {} \\;",
    "openapi:bundle": "bundle-api-spec -i api/internal.yaml.template -o api/internal.yaml -V $npm_package_version",
    "openapi:bundle-external": "bundle-api-spec -i api/external.yaml.template -o api/external.yaml -V $npm_package_version",
    "generate": "pnpm openapi:bundle && pnpm openapi:bundle-external && pnpm generate:definitions-internal && pnpm generate:definitions-external && pnpm generate:definitions-lollipop-first-sign",
    "generate:definitions-internal": "shx rm -rf ./src/generated/definitions/internal && shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./api/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal ",
    "generate:definitions-external": "shx rm -rf ./src/generated/definitions/external && shx mkdir -p ./src/generated/definitions/external && gen-api-models --api-spec ./api/external.yaml --no-strict --out-dir ./src/generated/definitions/external --request-types --response-decoders --client",
    "generate:definitions-lollipop-first-sign": "shx rm -rf src/generated/definitions/lollipop-first-consumer && gen-api-models --api-spec api/lollipop_first_consumer.yaml --out-dir src/generated/definitions/lollipop-first-consumer",
    "dist:modules": "modclean -r -n default:safe && pnpm install --production",
    "predeploy": "pnpm build && pnpm dist:modules"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^3.0.0",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/vfile-message": "^2.0.0",
    "@types/xml-crypto": "^1.4.2",
    "@vitest/coverage-v8": "~3.2.4",
    "dotenv-cli": "^3.1.0",
    "eslint-config-monorepo": "workspace:^",
    "eslint-plugin-prettier": "^4.0.0",
    "modclean": "^3.0.0-beta.1",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "swagger-cli": "^4.0.4",
    "timekeeper": "^2.2.0",
    "typescript": "^5.4.5",
    "vitest": "~3.2.4"
  },
  "dependencies": {
    "@azure/cosmos": "^3.17.2",
    "@azure/storage-blob": "^12.29.1",
    "@mattrglobal/http-signatures": "^4.0.1",
    "@pagopa/azure-storage-migration-kit": "^0.0.2",
    "@pagopa/express-azure-functions": "^2.0.0",
    "@pagopa/io-auth-n-identity-commons": "workspace:^",
    "@pagopa/io-functions-commons": "28.1.0",
    "@pagopa/openapi-codegen-ts": "^12.2.0",
    "@pagopa/ts-commons": "^11.0.0",
    "@pagopa/winston-ts": "^2.2.0",
    "@xmldom/xmldom": "^0.8.10",
    "applicationinsights": "1.8.10",
    "date-fns": "^2.29.3",
    "express": "^4.15.3",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "jose": "^4.13.0",
    "jsonwebtoken": "^9.0.0",
    "jwk-to-pem": "^2.0.5",
    "node-fetch": "^2.6.0",
    "ulid": "^2.3.0",
    "winston": "^3.2.1",
    "xml-crypto": "^2.1.5"
  }
}
