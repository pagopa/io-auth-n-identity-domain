{
  "name": "io-session-manager-internal",
  "description": "",
  "author": "IO Auth & Identity Team",
  "version": "0.0.1",
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc && yarn postbuild",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env -- func start --javascript",
    "start:watch": "yarn start watch",
    "lint": "yarn lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "lint-api": "find ./api -name '*.yaml' -exec swagger-cli validate {} \\;",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@vitest/coverage-v8": "~1.5.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^8.57.0",
    "eslint-config-monorepo": "*",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.4.5",
    "vitest": "~1.5.0"
  },
  "dependencies": {
    "@pagopa/ts-commons": "^12.5.0",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "io-ts-types": "^0.5.19",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5"
  }
}
