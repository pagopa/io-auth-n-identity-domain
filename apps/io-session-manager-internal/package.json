{
  "name": "io-session-manager-internal",
  "version": "0.1.0",
  "author": "IO Auth & Identity Team",
  "main": "dist/controllers/main.js",
  "engines": {
    "node": ">= 20.0.0"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc && yarn postbuild",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "start": "dotenv -e .env -- func start --javascript",
    "start:watch": "yarn start watch",
    "lint": "yarn lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "generate": "yarn generate:definitions-internal",
    "generate:definitions-internal": "shx rm -rf ./src/generated/definitions/internal && shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./api/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal "
  },
  "dependencies": {
    "@azure/functions": "^4.7.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.7",
    "@pagopa/io-functions-commons": "^29.1.0",
    "@pagopa/ts-commons": "^13.1.1",
    "@redis/client": "1.4.2",
    "applicationinsights": "^2.9.5",
    "fp-ts": "^2.16.9",
    "io-ts": "^2.2.22",
    "io-ts-types": "^0.5.16",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "redis": "~4.5.1"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@pagopa/openapi-codegen-ts": "^13.2.0",
    "@pagopa/typescript-config-node": "*",
    "@types/node": "~20.12.0",
    "@vitest/coverage-v8": "~1.5.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-monorepo": "*",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "typescript": "^5.4.3",
    "vitest": "~1.5.0"
  }
}
