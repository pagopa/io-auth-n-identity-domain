{
  "name": "io-profile-async",
  "version": "1.4.0",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "tsc && yarn postbuild",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "start:watch": "yarn start watch",
    "lint": "yarn lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "lint-api": "find ./api -name '*.yaml' -exec swagger-cli validate {} \\;",
    "generate": "yarn generate:definitions-backend-session && yarn generate:definitions-function-profile",
    "generate:definitions-backend-session": "shx rm -rf ./src/generated/definitions/backend-session && shx mkdir -p ./src/generated/definitions/backend-session && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-backend/150cabdfccc2968899175f4f9648a815bd078c57/api_session.yaml --no-strict --out-dir ./src/generated/definitions/backend-session --request-types --response-decoders --client",
    "generate:definitions-function-profile": "shx rm -rf ./src/generated/definitions/function-profile && shx mkdir -p ./src/generated/definitions/function-profile && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-app/a42f14ae2c1d944c6c8d1ea6127a2b8f395396c8/openapi/index.yaml --no-strict --out-dir ./src/generated/definitions/function-profile --request-types --response-decoders --client",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "dist:modules": "modclean -r -n default:safe && yarn install --production",
    "predeploy": "yarn build && yarn dist:modules"
  },
  "description": "",
  "devDependencies": {
    "@azure/functions": "^3.5.0",
    "@pagopa/eslint-config": "^3.0.0",
    "@pagopa/openapi-codegen-ts": "^14.0.0",
    "@types/html-to-text": "^9.0.4",
    "@types/node-fetch": "^2.6.2",
    "@types/nodemailer": "^6.4.17",
    "@vitest/coverage-v8": "~1.5.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "eslint-config-monorepo": "*",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-check": "^1.16.0",
    "modclean": "^3.0.0-beta.1",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "typescript": "^5.4.5",
    "vitest": "~1.5.0"
  },
  "dependencies": {
    "@azure/cosmos": "^4.1.1",
    "@azure/data-tables": "^13.3.0",
    "@azure/storage-blob": "12.17.0",
    "@azure/storage-queue": "^12.16.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^1.2.1",
    "@pagopa/io-app-email-templates": "^0.4.0",
    "@pagopa/io-functions-commons": "^29.3.0",
    "@pagopa/logger": "^1.0.1",
    "@pagopa/ts-commons": "^13.1.1",
    "applicationinsights": "^2.9.2",
    "fp-ts": "^2.16.1",
    "html-to-text": "^9.0.5",
    "io-ts": "^2.2.21",
    "io-ts-types": "^0.5.19",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "node-fetch": "^2.6.9",
    "nodemailer": "^6.10.0"
  }
}
