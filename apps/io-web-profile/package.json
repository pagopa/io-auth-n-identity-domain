{
  "name": "io-web-profile",
  "description": "",
  "author": "IO Auth & Identity Team",
  "version": "1.8.1",
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist && npm run generate",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build": "tsc",
    "watch": "tsc -w",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "predev": "npm-run-all build",
    "dev": "npm-run-all --parallel start watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "lint-api": "find ./openapi -name '*.yaml' -exec swagger-cli validate {} \\;",
    "generate": "yarn generate:definitions-internal && yarn generate:definitions-external && yarn generate:fast-login && yarn generate:hub-spid-login && yarn generate:functions-app",
    "generate:definitions-internal": "shx rm -rf  ./src/generated/definitions/internal && shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./openapi/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal",
    "generate:definitions-external": "shx rm -rf  ./src/generated/definitions/external && shx mkdir -p ./src/generated/definitions/external && gen-api-models --api-spec ./openapi/external.yaml --no-strict --out-dir ./src/generated/definitions/external",
    "generate:fast-login": "shx rm -rf  ./src/generated/definitions/fast-login && shx mkdir -p ./src/generated/definitions/fast-login && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-fast-login/v3.4.0/api/internal.yaml --no-strict --out-dir ./src/generated/definitions/fast-login --request-types --response-decoders --client",
    "generate:hub-spid-login": "shx rm -rf  ./src/generated/definitions/hub-spid-login && shx mkdir -p ./src/generated/definitions/hub-spid-login && gen-api-models --api-spec ./openapi/hub-spid-login.yaml --no-strict --out-dir ./src/generated/definitions/hub-spid-login --request-types --response-decoders --client",
    "generate:functions-app": "shx rm -rf  ./src/generated/definitions/io-functions-app && shx mkdir -p ./src/generated/definitions/io-functions-app && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-app/5c4edda05b426c5bf70e4a45515070a58167ac2e/openapi/index.yaml --no-strict --out-dir ./src/generated/definitions/io-functions-app --request-types --response-decoders --client",
    "dist:modules": "modclean -r -n default:safe && yarn install --production",
    "predeploy": "npm-run-all build dist:*",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md",
    "generate-certificate": "shx rm -rf ./certificate && npm-run-all generate-certificate:*",
    "generate-certificate:primary": "shx mkdir -p ./certificate && openssl ecparam -genkey -name prime256v1 -noout -out ./certificate/ec_primary.pem && openssl ec -in ./certificate/ec_primary.pem -pubout -out ./certificate/pub_primary.pem",
    "generate-certificate:secondary": "shx mkdir -p ./certificate && openssl ecparam -genkey -name prime256v1 -noout -out ./certificate/ec_secondary.pem && openssl ec -in ./certificate/ec_secondary.pem -pubout -out ./certificate/pub_secondary.pem"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^3.0.0",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node-fetch": "^2.5.7",
    "@types/vfile-message": "^2.0.0",
    "@vitest/coverage-v8": "~1.5.0",
    "auto-changelog": "2.2.1",
    "dependency-check": "^4.1.0",
    "dotenv-cli": "^3.1.0",
    "eslint-config-monorepo": "*",
    "eslint-plugin-prettier": "^4.0.0",
    "modclean": "^3.0.0-beta.1",
    "oval": "^1.0.0",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.4.5",
    "vitest": "~1.5.0"
  },
  "dependencies": {
    "@azure/cosmos": "^3.11.5",
    "@azure/storage-blob": "^12.17.0",
    "@pagopa/express-azure-functions": "^4.0.1",
    "@pagopa/io-functions-commons": "^28.0.0",
    "@pagopa/openapi-codegen-ts": "^12.1.2",
    "@pagopa/ts-commons": "^12.5.0",
    "@pagopa/winston-ts": "^2.2.0",
    "azure-storage": "^2.10.3",
    "date-fns": "^2.30.0",
    "express": "^4.15.3",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "io-ts-types": "^0.5.19",
    "jose": "^4.14.6",
    "jsonwebtoken": "^9.0.1",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "node-fetch": "^2.6.0",
    "ulid": "^2.3.0",
    "winston": "^3.2.1"
  },
  "resolutions": {
    "handlebars": "~4.5.3"
  }
}
