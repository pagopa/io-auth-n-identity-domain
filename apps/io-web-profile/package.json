{
  "name": "io-web-profile",
  "description": "",
  "author": "IO Auth & Identity Team",
  "version": "1.9.1",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc && pnpm postbuild",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noemit",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "canary:local": "dotenv -e .env node ./dist/deployment/canary.js",
    "canary": "node ./dist/deployment/canary.js",
    "start:watch": "pnpm start watch",
    "lint": "pnpm lint:check --fix",
    "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "lint-api": "find ./api -name '*.yaml' -exec swagger-cli validate {} \\;",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "generate": "pnpm generate:definitions-internal && pnpm generate:definitions-external && pnpm generate:fast-login && pnpm generate:hub-spid-login && pnpm generate:functions-app",
    "generate:definitions-internal": "shx rm -rf ./src/generated/definitions/internal && shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./api/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal",
    "generate:definitions-external": "shx rm -rf ./src/generated/definitions/external && shx mkdir -p ./src/generated/definitions/external && gen-api-models --api-spec ./api/external.yaml --no-strict --out-dir ./src/generated/definitions/external",
    "generate:fast-login": "shx rm -rf ./src/generated/definitions/fast-login && shx mkdir -p ./src/generated/definitions/fast-login && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-auth-n-identity-domain/477ca0f612c4ecbeddc1b35bbdde88c4fb702d5c/apps/io-fast-login/api/internal.yaml --no-strict --out-dir ./src/generated/definitions/fast-login --request-types --response-decoders --client",
    "generate:hub-spid-login": "shx rm -rf ./src/generated/definitions/hub-spid-login && shx mkdir -p ./src/generated/definitions/hub-spid-login && gen-api-models --api-spec ./api/hub-spid-login.yaml --no-strict --out-dir ./src/generated/definitions/hub-spid-login --request-types --response-decoders --client",
    "generate:functions-app": "shx rm -rf ./src/generated/definitions/io-functions-app && shx mkdir -p ./src/generated/definitions/io-functions-app && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-app/5c4edda05b426c5bf70e4a45515070a58167ac2e/openapi/index.yaml --no-strict --out-dir ./src/generated/definitions/io-functions-app --request-types --response-decoders --client",
    "generate-certificate": "shx rm -rf ./certificate && pnpm generate-certificate:primary && pnpm generate-certificate:secondary",
    "generate-certificate:primary": "shx mkdir -p ./certificate && openssl ecparam -genkey -name prime256v1 -noout -out ./certificate/ec_primary.pem && openssl ec -in ./certificate/ec_primary.pem -pubout -out ./certificate/pub_primary.pem",
    "generate-certificate:secondary": "shx mkdir -p ./certificate && openssl ecparam -genkey -name prime256v1 -noout -out ./certificate/ec_secondary.pem && openssl ec -in ./certificate/ec_secondary.pem -pubout -out ./certificate/pub_secondary.pem",
    "dist:modules": "modclean -r -n default:safe && pnpm install --production",
    "predeploy": "pnpm build && pnpm dist:modules"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "catalog:",
    "@types/express": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "@types/node-fetch": "catalog:",
    "@types/vfile-message": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "dependency-check": "catalog:",
    "dotenv-cli": "^3.1.0",
    "eslint-config-monorepo": "workspace:^",
    "eslint-plugin-prettier": "catalog:",
    "modclean": "catalog:",
    "oval": "catalog:",
    "prettier": "catalog:",
    "shx": "^0.3.2",
    "swagger-cli": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@azure/cosmos": "^3.11.5",
    "@azure/storage-blob": "^12.17.0",
    "@pagopa/express-azure-functions": "catalog:",
    "@pagopa/io-functions-commons": "^28.0.0",
    "@pagopa/openapi-codegen-ts": "^12.1.2",
    "@pagopa/ts-commons": "catalog:",
    "@pagopa/winston-ts": "catalog:",
    "applicationinsights": "catalog:",
    "azure-storage": "catalog:",
    "canary-deployment-monitor": "workspace:^",
    "date-fns": "catalog:",
    "express": "^4.15.3",
    "fp-ts": "catalog:",
    "io-ts": "catalog:",
    "io-ts-types": "catalog:",
    "jose": "^4.14.6",
    "jsonwebtoken": "^9.0.1",
    "monocle-ts": "catalog:",
    "newtype-ts": "catalog:",
    "node-fetch": "^2.6.0",
    "ulid": "catalog:",
    "winston": "^3.2.1",
    "winston-transport": "catalog:"
  }
}
