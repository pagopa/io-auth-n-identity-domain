{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@pagopa/typescript-config-node/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__mocks__/**",
    "docker",
    "**/__tests__",
    "**/__integrations__"
  ]
}