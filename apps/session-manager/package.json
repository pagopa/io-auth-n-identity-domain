{
    "name": "@pagopa/io-session-manager",
    "version": "0.1.0",
    "description": "API for IO session",
    "engines": {
        "node": ">= 18.0.0"
    },
    "scripts": {
        "clean": "shx rm -rf dist",
        "clean:generated": "shx rm -rf ./src/generated",
        "build": "tsc && yarn postbuild",
        "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
        "build:watch": "tsc -w",
        "typecheck": "tsc build --noemit",
        "start": "node dist/server.js",
        "start:watch": "yarn start watch",
        "lint": "yarn lint:check --fix",
        "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "generate": "yarn generate:proxy:api-models && yarn generate:proxy:fast-login && yarn generate:proxy:lollipop",
        "generate:proxy:api-models": "shx rm -rf src/generated/backend && gen-api-models --api-spec api/internal.yaml --out-dir src/generated/backend",
        "generate:proxy:fast-login": "shx rm -rf src/generated/fast-login-api && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-fast-login/2ee351b69fdea2ffab3c3f3ed4dc55c94a024dc7/api/internal.yaml --out-dir src/generated/fast-login-api --no-strict --request-types --response-decoders --client",
        "generate:proxy:lollipop": "shx rm -rf src/generated/lollipop-api && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-lollipop/724c3ba79d272d4e2555dbc2a8e1657bec9f84ce/openapi/internal.yaml --out-dir src/generated/lollipop-api --no-strict --request-types --response-decoders --client"
    },
    "dependencies": {
        "@azure/storage-queue": "^12.16.0",
        "@pagopa/io-functions-app-sdk": "x",
        "@pagopa/io-spid-commons": "^13.4.0",
        "@pagopa/ts-commons": "^13.1.0",
        "applicationinsights": "^1.8.10",
        "body-parser": "^1.20.2",
        "date-fns": "^1.30.1",
        "express": "^4.19.2",
        "fp-ts": "^2.16.5",
        "helmet": "^7.1.0",
        "io-ts": "^2.2.21",
        "io-ts-types": "^0.5.16",
        "logform": "^2.6.0",
        "monocle-ts": "^2.3.13",
        "newtype-ts": "^0.3.5",
        "node-fetch": "^2.6.1",
        "passport": "^0.6.0",
        "passport-http-bearer": "^1.0.1",
        "passport-strategy": "^1.0.0",
        "redis": "^4.5.1",
        "winston": "^3.13.0",
        "xmldom": "^0.6.0"
    },
    "devDependencies": {
        "@pagopa/eslint-config": "^3.0.0",
        "@pagopa/openapi-codegen-ts": "^13.2.0",
        "@pagopa/typescript-config-node": "*",
        "@types/body-parser": "^1",
        "@types/express": "^4.17.21",
        "@types/node": "~18.13.0",
        "@types/node-fetch": "^2.1.2",
        "@types/passport": "^1.0.3",
        "@types/passport-http-bearer": "^1.0.34",
        "@types/xmldom": "^0",
        "@vitest/coverage-v8": "^1.5.3",
        "dependency-check": "^4.1.0",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.57.0",
        "eslint-config-monorepo": "*",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "shx": "^0.3.2",
        "swagger-cli": "^4.0.4",
        "typescript": "^5.4.3",
        "vitest": "^1.5.0",
        "vitest-sonar-reporter": "^2.0.0"
    }
}
