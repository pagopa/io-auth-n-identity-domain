{
    "name": "@pagopa/io-session-manager",
    "version": "0.0.1",
    "description": "API for IO session",
    "scripts": {
        "clean": "shx rm -rf dist",
        "clean:generated": "shx rm -rf ./src/generated",
        "build": "tsc",
        "build:watch": "yarn build -w",
        "typecheck": "yarn build --noemit",
        "start": "node dist/server.js",
        "start:watch": "yarn start watch",
        "lint": "yarn lint:check --fix",
        "lint:check": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "@pagopa/eslint-config": "^3.0.0",
        "@pagopa/typescript-config-node": "*",
        "@rushstack/eslint-patch": "^1.10.2",
        "@types/express": "^4.17.21",
        "@types/node": "~20.10.0",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.57.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "shx": "^0.3.2",
        "swagger-cli": "^4.0.4",
        "typescript": "^5.4.3",
        "vitest": "^1.5.0"
    },
    "dependencies": {
        "@azure/functions": "^3.2.0",
        "@pagopa/io-functions-commons": "^28.21.0",
        "@pagopa/io-spid-commons": "^13.4.0",
        "@pagopa/openapi-codegen-ts": "^13.1.0",
        "@pagopa/ts-commons": "^12.6.0",
        "express": "^4.19.2",
        "fp-ts": "^2.16.5",
        "io-ts": "^2.2.21"
    }
}
