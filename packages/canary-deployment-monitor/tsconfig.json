{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@pagopa/typescript-config-node/tsconfig.json",
  "exclude": ["node_modules", "dist", "**/__tests__/**", "**/__mocks__/**", "vite.config.mts"],
  "compilerOptions": {
    "module": "Node16",
    "target": "es2022",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true
  }
}
