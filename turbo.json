{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^clean",
        "clean",
        "^generate",
        "generate",
        "^build"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [],
      "dependsOn": [
        "^build",
        "^typecheck"
      ]
    },
    "format": {},
    "format:check": {},
    "lint": {
      "inputs": [
        "src/**/*.ts"
      ]
    },
    "lint:check": {
      "inputs": [
        "src/**/*.ts"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputMode": "errors-only",
      "dependsOn": [
        "^build",
        "^test"
      ]
    },
    "test:coverage": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputMode": "errors-only",
      "dependsOn": [
        "^build",
        "^test"
      ],
      "cache": false
    },
    "generate": {
      "inputs": ["api/**/*.yaml"],
      "outputs": ["src/generated/**/*.ts"],
      "outputMode": "errors-only"
    },
    "clean": {
      "inputs": ["dist/**"],
      "cache": false
    }
  }
}