<policies>
    <inbound>
        <base />
        <set-backend-service base-url="{{io-fn3-public-url}}/api/v2" />
        <set-header name="x-functions-key" exists-action="override">
            <value>{{io-fn3-public-key}}</value>
        </set-header>
        <cors>
            <allowed-origins>
                <origin>https://account.ioapp.it/</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>OPTIONS</method>
                <method>GET</method>
                <method>POST</method>
            </allowed-methods>
            <allowed-headers>
                <header>Content-Type</header>
                <header>Authorization</header>
                <header>x-pagopa-email-validation-token</header>
            </allowed-headers>
        </cors>
    </inbound>
    <outbound>
        <base />
    </outbound>
</policies>
