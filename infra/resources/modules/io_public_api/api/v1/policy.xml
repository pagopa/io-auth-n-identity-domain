<policies>
    <inbound>
        <base />
        <set-backend-service base-url="{{io-fn3-public-url}}" />
        <return-response>
            <set-status code="303" reason="See Other" />
            <set-header name="Location" exists-action="override">
                <value>@("https://account.ioapp.it/it/conferma-email/" + context.Request.OriginalUrl.QueryString)</value>
            </set-header>
        </return-response>
    </inbound>
    <outbound>
        <base />
    </outbound>
</policies>
